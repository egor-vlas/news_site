<div class="container">
<h1>Add an article</h1>

<% if @article.errors.any? %>
	<h2>The following errors prevented article from being saved </h2>
	<ul>
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>

 <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true)   do |f| %>
				<div class="form-group row">
					
						<%= f.label :title, class:'col-2 col-form-label' %>
						<div class="col-10">
							<%= f.text_field :title, class: 'form-control shadow rounded', placeholder: "Title of article" %>
						</div>
						
				</div>	

					<div class="form-group row">
						<%= f.label :body, class: "col-2 col-form-label"%>
						<div class="col-10">
						<%= f.text_area :body, rows: 10, class: 'form-control shadow rounded', placeholder: "Description of article" %>
						</div>
					</div>

					<div class="form-group row justify-content-center">
						<%= f.submit class: "btn btn-outline-light btn-sm" %>
					</div>
			<% end %>	
	</div>
</div>